{
  "name": "vihaan-learning-platform",
  "version": "1.0.0",
  "description": "Interactive 5th grade learning platform with AI-powered remediation and STAAR/MAP test preparation",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=3000 --open=/index.html",
    "build": "npm run optimize-images && npm run minify-css && npm run minify-js",
    "optimize-images": "imagemin assets/images/**/*.{jpg,png} --out-dir=dist/images --plugin=webp --plugin=imagemin-mozjpeg --plugin=imagemin-pngquant",
    "minify-css": "cleancss -o dist/css/main.min.css css/main.css css/subjects/*.css css/responsive.css",
    "minify-js": "terser js/app.js js/progress.js js/interactive.js js/supabase-config.js js/ai-remediation.js --compress --mangle -o dist/js/app.min.js",
    "deploy": "gh-pages -d dist",
    "test": "jest",
    "lint": "eslint js/**/*.js",
    "format": "prettier --write js/**/*.js css/**/*.css",
    "validate-html": "html-validate *.html subjects/**/*.html",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./reports/lighthouse.html",
    "start": "npm run dev"
  },
  "keywords": [
    "education",
    "5th-grade",
    "learning-platform",
    "ai-remediation",
    "staar-prep",
    "map-testing",
    "texas-teks",
    "visual-learning",
    "interactive-education"
  ],
  "author": "Yallappa H <yvh1223@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yvh1223/vihaan-learning-platform.git"
  },
  "homepage": "https://github.com/yvh1223/vihaan-learning-platform#readme",
  "devDependencies": {
    "live-server": "^1.2.2",
    "imagemin": "^8.0.1",
    "imagemin-webp": "^7.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "clean-css-cli": "^5.6.2",
    "terser": "^5.19.4",
    "gh-pages": "^6.0.0",
    "jest": "^29.7.0",
    "eslint": "^8.49.0",
    "prettier": "^3.0.3",
    "html-validate": "^8.5.0",
    "lighthouse": "^11.0.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "iOS >= 12",
    "Android >= 8"
  ]
}